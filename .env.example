# TinyClaw Environment Variables Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Bot Tokens
# ===========================================

# Discord Bot Token
# Get one at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Telegram Bot Token
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# Claude API Configuration
# ===========================================

# Anthropic API Key (required)
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Anthropic Base URL (optional, default: https://api.anthropic.com)
# Use this if you're using a custom proxy or alternative endpoint
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Claude Model ID (optional, default: claude-sonnet-4-5)
# Options: claude-sonnet-4-5, claude-opus-4-6, or custom model ID
ANTHROPIC_MODEL=claude-sonnet-4-5

# ===========================================
# TinyClaw Configuration
# ===========================================

# Enabled channels (comma-separated)
# Options: telegram, discord, whatsapp
TINYCLAW_CHANNELS=telegram,discord

# Heartbeat interval in seconds (default: 3600)
# How often Claude checks in proactively
TINYCLAW_HEARTBEAT_INTERVAL=3600
